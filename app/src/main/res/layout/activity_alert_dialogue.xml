<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertDialogueActivity">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Permission"
        android:background="#55ff11"
        android:id="@+id/btnCameraPermission"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        />

    <Button
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Alert Dialogue"
        android:background="#54fb98"
        android:id="@+id/btnCameraAlertDialogue"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnCameraPermission"
        />
</RelativeLayout>